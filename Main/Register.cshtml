@{
    ViewBag.Title = "Web Kakaibo";
}

<div class="jumbotron">
    <h2>登録</h2>
    <p class="lead">お買い物の日にち、場所、品物、金額の登録を行います。</p>
    <p><a class="btn btn-primary btn-lg" @Html.ActionLink("Web家計簿TOPへ", "Index", "Main")</a></p>
</div>

<div class="form-group row">
    <div class="col-sm-3">
        <label>いつ</label>
        <input name="days" class="days form-control" required="" type="text" placeholder="半角数字　(例)9999/12/31">
    </div>

    <div class="col-sm-3">
        <label>どこで</label>
        <input name="shop" class="shop form-control" required="" type="text" placeholder="任意">
    </div>

    <div class="col-sm-3">
        <label>なにを</label>
        <input name="mono" class="mono form-control" required="" type="text" placeholder="任意">
    </div>

    <div class="col-sm-3">
        <label>いくらで</label>
        <input name="price" class="price form-control" required="" type="text" placeholder="半角数字　(例)12345">
    </div>
</div>

<p><a class="btn btn-default" href="">登録実行 &raquo;</a></p>

